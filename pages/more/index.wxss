/* pages/more/index.wxss */

.container {
  padding: 0;
  width: 100%;
}

.container .title {
  width: 100%;
  border-bottom: 2rpx solid #f0f0f0;
  border-top: 2rpx solid #f0f0f0;
  font-size: 32rpx;
}

.title-txt {
  height: 56rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 26rpx;
  color: #ff8a2f;
}
.icon{
  margin-right: 12rpx;
  line-height: 56rpx;
  font-size: 32rpx;
}

.title-txt::before {
  content: '';
  display: block;
  width: 12rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #ff8a2f;
  margin-right: 12rpx;
}

.title-content {
  display: flex;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
  overflow: scroll;
  background-color: #ccc;
}

.title-content .img-wrap {
  flex: 0 0 200rpx;
  height: 240rpx;
  padding: 28rpx 20rpx;
  border: 2rpx solid #f0f0f0;
  background-color: #f0f0f0;
}
.img-wrap .img-item{
  width: 100%;
  height: 100%;
  display: flex;
  border: 2rpx solid #ccc;
  border-radius: 5%;
  overflow: hidden;
  justify-content: space-between;
  flex-flow: column nowrap;
  align-items: center;
  background-color: #000;
}
.img-item .img-wrap-title{
  flex: 0 0 40rpx;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
}
.img-item .img-wrap-image{
  flex: 0 0 200rpx;
  width: 100%;
}
.img-wrap-image .img-image{
  width: 100%;
  height: 100%;
}
.content{
  width: 100%;
  background-color: #000;
  border-top: 2rpx solid #c0c0c0;
}
.contet-title{
  width: 100%;
  line-height: 70rpx;
  font-size: 40rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.ct-l{
  color: #fff;
}
.ct-r{
  color: #ff8a2f;
}

.content-content{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.content-wrap{
  width: 640rpx;
  margin: 0 auto;
}
.content-content-wrap{
  width: 100%;
  height: 540rpx;
  background-color: #fff;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid #ccc;
  margin-bottom: 20rpx;
  border-radius: 3%;
  overflow: hidden;
}
.content-img{
  flex: 0 0 480rpx;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
}
.content-img .images{
  width: 100%;
  height: 100%;
}
.content-txt{
  flex: 0 0 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.content-txt .content-txt-r{
  font-size: 20rpx;
  color: #ff8a2f;
}